{
	"name": "@drovp/rename",
	"version": "2.1.1",
	"description": "Bulk rename files according to a configured template.",
	"main": "dist/index.js",
	"homepage": "https://github.com/drovp/rename",
	"bugs": "https://github.com/drovp/rename/issues",
	"repository": "github:drovp/rename",
	"keywords": [
		"drovpplugin",
		"rename",
		"file",
		"bulk",
		"checksum",
		"crc32",
		"md5",
		"sha1",
		"sha256",
		"sha512",
		"meta"
	],
	"author": "tomasklaen",
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist",
		"*.md"
	],
	"scripts": {
		"build": "tsc",
		"watch": "tsc --watch",
		"clean": "rimraf dist",
		"start": "npm-run-all clean watch",
		"test": "tsc -p . --noEmit",
		"preversion": "npm-run-all clean build",
		"git-push": "git push",
		"npm-publish": "npm publish",
		"postversion": "npm-run-all git-push npm-publish"
	},
	"dependencies": {
		"@drovp/types": "^4.6.0",
		"@tomasklaen/checksum": "^1.1.0",
		"dayjs": "^1.11.1",
		"expand-template-literal": "^1.0.3",
		"ffprobe-normalized": "^1.0.1",
		"filenamify": "^5.1.1",
		"platform-paths": "^1.2.2"
	},
	"devDependencies": {
		"npm-run-all": "^4.1.5",
		"rimraf": "^3.0.2",
		"tslib": "^2.4.0",
		"typescript": "^4.6.3"
	}
}
